{
	"name": "duon/cli",
	"description": "Duon cli tools/runner",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ernst",
			"email": "ernst@duon.run",
			"role": "Developer"
		}
	],
	"homepage": "https://duon.dev/boiler",
	"keywords": [
		"duon",
		"cli"
	],
	"autoload": {
		"psr-4": {
			"Duon\\Cli\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Cli\\Tests\\": "tests"
		}
	},
	"require": {
		"php": "^8.5"
	},
	"require-dev": {
		"ernst/coverlyzer": "^0.2",
		"duon/dev": "^2.3",
		"phpunit/phpunit": "^12.0",
		"vimeo/psalm": "6.x-dev"
	},
	"scripts": {
		"test": [
			"./vendor/bin/phpunit --testdox --no-coverage --colors=always"
		],
		"check": "./vendor/bin/psalm --no-cache",
		"check-github": "./vendor/bin/psalm --output-format=github --shepherd",
		"mdlint": "markdownlint-cli2 README.md CHANGELOG.md LICENSE.md docs/",
		"coverage": [
			"php -d xdebug.mode=coverage ./vendor/bin/phpunit --testdox --path-coverage --coverage-clover=clover.xml --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"coverage-ci": [
			"php -d pcov.enabled=1 ./vendor/bin/phpunit --testdox --coverage-clover=clover.xml --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer coverage",
			"composer check",
			"composer mdlint"
		],
		"github": [
			"composer coverage-ci",
			"composer check-github"
		],
		"benchmark": "php bench/run.php",
		"post-install-cmd": [
			"Duon\\Development\\Config::sync"
		],
		"post-update-cmd": [
			"Duon\\Development\\Config::sync"
		]
	}
}
