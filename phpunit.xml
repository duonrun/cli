<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd" colors="true" cacheDirectory=".phpunit.cache">
  <testsuites>
    <testsuite name="Duon\Cli Test Suite">
      <directory suffix="Test.php">tests</directory>
    </testsuite>
  </testsuites>
  <coverage>
    <report>
      <html outputDirectory="coverage" lowUpperBound="20" highLowerBound="50"/>
    </report>
  </coverage>
  <source>
    <include>
      <directory>src</directory>
    </include>
  </source>
</phpunit>
